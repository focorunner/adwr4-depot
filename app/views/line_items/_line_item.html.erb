<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>
    <td>
      <% if @order.nil? %>
        <%= button_to '+', line_items_url(product_id: line_item.product), remote: true, style: "width: 20px; height: 5px;padding: 0;font-size: x-small;" %>
      <% end %>
      <%= line_item.quantity %>&times;
      <% if @order.nil? %>
        <%= button_to '-', decrement_line_item_path(id: line_item), remote: true, style: "width: 20px; height: 5px;padding: 0;font-size: x-small"%>
      <% end %>
    </td>
    <td><%= line_item.product.title %></td>
    <td class="item_price">
      <%= number_to_currency(line_item.total_price) %><br>
      <% if @order.nil? %>
        <%= button_to 'remove', line_item, method: :delete, data: {confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>